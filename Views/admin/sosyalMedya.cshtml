@{
    ViewBag.Title = "sosyalMedya";
    Layout = "~/Views/layout/adminlayout.cshtml";
}
<form method="post" action="/admin/link/@ViewBag.ID">
    <div class="row text-center">
        <div class="col-lg-3 col-md-3 col-sm-3 col-xs-6">
            <i class="fa fa-facebook" style="width:50px; height:50px; background-color:#3b5998; padding:10px; margin:30px; color: #ffffff !important;"></i>
            <input type="text" class="form-control" id="Facebook" name="Facebook" value="@ViewBag.Facebook">
        </div>
        <div class="col-lg-3 col-md-3 col-sm-3 col-xs-6">
            <i class="fa fa-instagram" style="width:50px; height:50px; background-color:#823AB6; padding:10px; margin:30px; color: #ffffff !important;"></i>
            <input type="text" class="form-control" id="Instagram" name="Instagram" value="@ViewBag.Instagram">
        </div>
        <div class="col-lg-3 col-md-3 col-sm-3 col-xs-6">
            <i class="fa fa-twitter" style="width:50px; height:50px; background-color:#1da1f2; padding:10px; margin:30px; color: #ffffff !important;"></i>
            <input type="text" class="form-control" id="Twitter" name="Twitter" value="@ViewBag.Twitter">
        </div>
        <div class="col-lg-3 col-md-3 col-sm-3 col-xs-6">
            <i class="fa fa-youtube" style="width:50px; height:50px; background-color:#CD201F; padding:10px; margin:30px; color: #ffffff !important;"></i>
            <input type="text" class="form-control" id="YouTube" name="YouTube" value="@ViewBag.YouTube">
        </div>
    </div>
    <div class="col-lg-4 col-md-4 col-sm-4 col-xs-4 offset-4">
        <div class="form-group">
            <input type="submit" value="Güncelle" name="btnn" class="btn btn-primary btn-block" style="margin-top:70px;">
        </div>
    </div>
</form>

