                    
@{
    ViewBag.Title = "Hakkımızda";
    Layout = "~/Views/layout/adminlayout.cshtml";
}
<div class="col-9 offset-1">
    <div id="formContent">
        <form method="post" action="/admin/hakkimizdaDuzenle/@ViewBag.ID">
            <div class="form-group">
                <h1>Hakkımızda</h1>
                <textarea name="hakkimizda" id="hakkimizda">@ViewBag.hakkimizda</textarea>

            </div>
            <div class="form-group">
                <input type="submit" value="Düzenle" class="btn btn-primary btn-block" style="margin-top:30px;">
            </div>
        </form>
    </div>
</div>


